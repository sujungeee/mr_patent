<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rounded_background_stroke"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_patent_content_similiarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/tv_patent_similiarity_id"
        android:textSize="16sp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_patent_write"/>

    <TextView
        android:id="@+id/tv_patent_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:text="특허 제목"
        android:textSize="16sp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="@+id/tv_patent_content_similiarity"
        app:layout_constraintTop_toBottomOf="@+id/tv_patent_content_similiarity"
        app:layout_constraintBottom_toTopOf="@id/tv_patent_content_write"/>

    <TextView
        android:id="@+id/tv_patent_content_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/mr_gray_dark"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_patent_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>