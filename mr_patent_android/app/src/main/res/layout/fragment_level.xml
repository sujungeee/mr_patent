<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:id="@+id/level_fragment"
    tools:context=".ui.study.LevelFragment">

    <View
        android:id="@+id/v_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.09" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/customTitleFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|bottom"
        android:text="Level 1"
        app:layout_constraintStart_toEndOf="@+id/v_title"
        app:layout_constraintTop_toBottomOf="@+id/v_title" />

    <TextView
        android:id="@+id/card_study"
        android:text="학습하기"
        android:textSize="30dp"
        android:gravity="bottom|end"
        android:padding="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/study_background"
        app:layout_constraintBottom_toTopOf="@+id/card_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/card_quiz"
        android:text="퀴즈 풀기"
        android:textSize="30dp"
        android:gravity="top|start"
        android:textColor="@color/mr_white"
        android:padding="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/quiz_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_study" />


</androidx.constraintlayout.widget.ConstraintLayout>